#!/bin/sh

post_install() {
	sed -i 's/.*OnlyCountry=.*/OnlyCountry=Custom/' /etc/pacman-mirrors.conf
	message
}


post_upgrade() {
	sed -i 's/.*OnlyCountry=.*/OnlyCountry=Custom/' /etc/pacman-mirrors.conf
	message
}

message() {
	echo ""
	echo "Mirrorlist set to custom mirrorlist, which is mirror.strits.dk."
	echo "To change it back to worldwide run pacman-mirrors -c ALL."
}
