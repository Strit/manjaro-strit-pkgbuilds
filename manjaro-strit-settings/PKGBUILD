pkgbase=manjaro-strit-settings
pkgname=('manjaro-strit-settings'
         'manjaro-strit-minimal-settings')
pkgver=20160606
pkgrel=2
pkgdesc="Manjaro Strit settings"
arch=('any')
url="https://www.strits.dk"
license=('GPL')
source=($pkgbase.tar.gz)
sha256sums=('b9e15c218922295dcc8a0ef3a01f67ee2b7c0729e6019aa02fded5c2896d2539')

pkgver() {
	date +%Y%m%d
}

_inst_dir(){
	install -d $pkgdir/etc
	cp -r $srcdir/$pkgbase$1/skel $pkgdir/etc
}

package_manjaro-strit-settings() {
	pkgdesc='Manjaro Strit settings'
	depends=('manjaro-base-skel' 'vertex-maia-icon-theme' 'vertex-maia-themes'
                 'xcursor-maia' 'manjaro-artwork')
	conflicts=('manjaro-desktop-settings')
	provides=('manjaro-desktop-settings')

	_inst_dir
}

#############minimal######################

package_manjaro-strit-minimal-settings() {
	pkgdesc='Manjaro Strit Minimal settings'
	depends=('manjaro-base-skel' 'vertex-maia-icon-theme' 'vertex-maia-themes'
                 'xcursor-maia' 'manjaro-artwork')
	conflicts=('manjaro-desktop-settings')
	provides=('manjaro-desktop-settings')

	_inst_dir '/minimal'
}