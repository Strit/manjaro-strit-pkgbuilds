pkgname=manjaro-strit-kde-settings
pkgver=20170331
pkgrel=1
pkgdesc="Manjaro Strit KDE settings"
depends=('breath-icon-theme' 'plasma5-themes-breath' 'manjaro-artwork')
conflicts=('manjaro-desktop-settings')
provides=('manjaro-desktop-settings')
arch=('any')
url="https://www.strits.dk"
license=('GPL')
source=($pkgname.tar.gz)
sha256sums=('3425f0fd01b6a221d535b039d66674d666131802559020d346723efb3125d504')

pkgver() {
	date +%Y%m%d
}

_inst_dir(){
	install -d $pkgdir/etc
	cp -r $srcdir/etc/skel $pkgdir/etc
}

package() {

	_inst_dir
}
